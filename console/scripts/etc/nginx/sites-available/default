#
# HTTP
#
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    return 301 https://$host$request_uri;
}

#
# HTTPS
#
server {

  # HTTPS
  listen 443 ssl default_server;
  listen [::]:443 ssl default_server;

  ssl_certificate     /etc/nginx/sites-available/console.crt;
  ssl_certificate_key /etc/nginx/sites-available/console.key;
  #ssl_protocols       TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
  #ssl_ciphers         HIGH:!aNULL:!MD5;

  server_name console.example.com;

  # for now allow up to 100Mb in a log file - need to redesign log uploads
  client_max_body_size 100M;

  # redirect all requests to dockerized plain nginx listening on port 8080
  location / {      
      proxy_pass http://localhost:8080;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $host;
      proxy_redirect off;
  }
}

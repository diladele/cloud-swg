[Unit]
Description=Updates /etc/issue file for Cloud SWG Console virtual appliance after network is up
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/opt/cloud-swg-console/bin/issue.sh
StandardOutput=truncate:/etc/issue
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
